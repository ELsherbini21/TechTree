@model UserRoleViewModel

@{
    ViewData["Title"] = "Manage Roles";
}

<form method="post">
    <div class="card mt-4">
        <div class="card-header">
            <h2> @Model.ApplicationUserName</h2>
            Add Or Remove Roles
        </div>

        <div class="card-body">
            <input type="hidden" asp-for="ApplicationUserId" />
            @for (int i = 0; i < Model.Roles.Count; i++)
            {

                <div class="form-check mt-2">
                    <input type="hidden" asp-for="@Model.Roles[i].RoleName" />
                    <input asp-for="@Model.Roles[i].IsSelected" class="form-check-input" id="Select" />
                    <label class="form-check-label" asp-for="@Model.Roles[i].RoleName">
                        @Model.Roles[i].RoleName
                    </label>
                </div>

            }
            <div class="text-danger" asp-validation-summary="All"></div>
        </div>

        <div class="card-footer">
            <button type="submit" class="btn btn-primary"> Save</button>
            <a  asp-action="Index" class="btn btn-secondary"> Cancel </a>
        </div>
    </div>
</form>