@model SignUpViewModel


@{
    ViewData["Title"] = "SignUp";
    Layout = "_AuthLayout";
}


<div asp-validation-summary="All" class="text-danger">
</div>


<form asp-action="SignUp" method="post">

    <span asp-validation-for="FirstName" class="text-danger" style="color:#bb2124;"></span>
    <input asp-for="FirstName" class="text FName" placeholder="First Name" required="">

    <span asp-validation-for="LastName" class="text-danger" style="color:#bb2124;"></span>
    <input asp-for="LastName" class="text LName" placeholder="Last Name" required="">

    <span asp-validation-for="UserName" class="text-danger" style="color:#bb2124;"></span>
    <input asp-for="UserName" class="text UserName" placeholder="UserName" required="">

    <span asp-validation-for="Email" class="text-danger" style="color:#bb2124;"></span>
    <input asp-for="Email" class="text email" placeholder="Email" required="">

    <span asp-validation-for="Password" class="text-danger" style="color:#bb2124;"></span>
    <input asp-for="Password" class="text" placeholder="Password" required="">

    <span asp-validation-for="ConfirmPassword" class="text-danger" style="color:#bb2124;"></span>
    <input asp-for="ConfirmPassword" class="text w3lpass" placeholder="Confirm Password" required="">

    <div class="wthree-text">
        <label class="anim">
            <input asp-for="IsAgree" class="checkbox" required="">
            <span>I Agree To The Terms & Conditions</span>
        </label>
        <div class="clear"> </div>
    </div>
    <input type="submit" value="SIGNUP">
</form>
<p> Have An Account ? <a asp-action="SignIn"> Login Now</a> </p>


@section Scripts{
    <Partial name="_ValidationScriptsPartial" />
}
