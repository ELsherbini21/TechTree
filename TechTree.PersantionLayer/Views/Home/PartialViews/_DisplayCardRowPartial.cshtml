@model IEnumerable<CategoryViewModel>

@if (Model.Count() > 0)
{

    <div class="row mt-3">
        @foreach (var item in Model)
        {
            <div class="col-md-4">

                <a href="#" class="text-dark">
                    <div class="card">
                        <img class="img-thumbnail" src="~/files/Images/@item.thumbnailImagePath" alt="@item.Title" />

                        <div class="card-body">
                            <h5 class="card-title">@item.Title</h5>

                            <p class="card-text"> @item.Description</p>

                        </div>
                    </div>
                </a>
            </div>
        }
    </div>

}
