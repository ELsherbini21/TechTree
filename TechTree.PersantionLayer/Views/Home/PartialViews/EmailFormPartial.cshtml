@model EmailViewModel

<form asp-action="SendEmail" method="post">

    <div class="form-group">
        <label asp-for="To" class="control-label">Email: </label>
        <input asp-for="To" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Subject" class="control-label">Subject: </label>
        <input asp-for="Subject" class="form-control" />

    </div>
    <div class="form-group">
        <label asp-for="Body" class="control-label">Message: </label>
        <textarea asp-for="Body" cols="30" rows="10" class="form-control"></textarea>

    </div>
    <div class="form-group d-flex">
        <input type="submit" value="Send Email" class="btn btn-outline-info ms-auto mt-1" />
    </div>
</form>
