@model IEnumerable<CategoryViewModel>

@{
    ViewData["Title"] = "CategoryViewModel Index";
}

<style>
    /* Custom CSS for Index View */
    .table > tbody > tr > td {
        vertical-align: central; /* Vertically center content in cells */
    }

    .thumbnail-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
    }

    .ellipsis {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        max-width: 200px;
    }

    .action-btns a {
        margin-right: 5px; /* Add some space between action buttons */
    }

    .action-btns .btn {
        padding: 0.375rem 0.75rem; /* Adjust button padding */
    }

    /* Set container width to 100% of viewport width */
    .full-width-container {
        width: 90vw;
        padding-right: 15px; /* Adjust for Bootstrap's default padding */
        padding-left: 15px; /* Adjust for Bootstrap's default padding */
        margin-right: 1px;
        margin-left: -50px;
    }
</style>

@if (!string.IsNullOrEmpty(ViewBag.resultOfSendEmail))
{
    <h1> @ViewBag.resultOfSendEmail</h1>
}

<partial name="CreateButtonPartial" />
<div class="full-width-container">
    <table id="JQueryUiTable" class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>

                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>

                    <td class="ellipsis">@Html.DisplayFor(modelItem => item.Description)</td>


                    <td class="action-btns m-auto">
                        <div class="d-flex justify-content-around">

                            <partial name="_RUDButtonsPartial" model="@item.Id" />


                            <a asp-controller="CategoryItem" asp-action="Index" asp-route-id="@item.Id" class="btn btn-outline-secondary btn-sm">
                                Update items
                            </a>

                            <button type="button" class="btn btn-outline-success btn-sm" data-bs-toggle="modal" data-bs-target="#form">
                                <i class="fa-solid fa-envelope" title="Send Email For  @item.Title Users"></i>
                            </button>

                            <div class="modal fade" id="form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <form asp-action="SendEmailForUsers" asp-route-categoryId="@item.Id">
                                    <partial name="PartialViews/SendEmailForUsersModal" model="null" />
                                </form>
                            </div>
                        </div>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section Scripts{
    <script>
        $(function () {
            $('.JQueryUiTable').dataTable();
        })
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
