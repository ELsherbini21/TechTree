@model IEnumerable<MediaTypeViewModel>

@{
    ViewData["Title"] = "CategoryViewModel Index";
}

<style>
    /* Custom CSS for Index View */

    /* Vertically center content in cells */
    .table > tbody > tr > td {
        vertical-align: middle;
    }

    /* Thumbnail image styles */
    .thumbnail-img {
        width: 50px;
        height: 50px;
        object-fit: cover;
    }

    /* Ellipsis for text overflow */
    .ellipsis {
        overflow: hidden;
        white-space: nowrap;
        text-overflow: ellipsis;
        max-width: 200px;
    }

    /* Add some space between action buttons */
    .action-btns a {
        margin-right: 5px;
    }

    /* Adjust button padding */
    .action-btns .btn {
        padding: 0.375rem 0.75rem;
    }

    /* Set container width to 100% of viewport width */
    .full-width-container {
        width: 100%;
        padding-right: 15px; /* Adjust for Bootstrap's default padding */
        padding-left: 15px; /* Adjust for Bootstrap's default padding */
        margin-right: 1px;
        margin-left: -50px;
    }
</style>

<partial name="CreateButtonPartial" />

<div class="">
    <table class="table table-striped table-hover">
        <thead class="thead-dark">
            <tr>
                <th>Title</th>
                <th >Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
               
                    <td class="action-btns mx-2 me-auto">
                        <partial name="_RUDButtonsPartial" model="@item.Id" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
